---
import config from '../../../config';
import Heading from '../system/Heading.astro';
import Text from '../system/Text.astro';
import Button from '../system/Button.astro';
import Section from '../system/Section.astro';
import YoutubeEmbed from '../YoutubeEmbed.astro'
import TestimonicalCard from './TestimonicalCard.astro';


import testimonial1 from '../../images/testimonial/1.png'
import testimonial2 from '../../images/testimonial/2.png'
import testimonial3 from '../../images/testimonial/3.png'
import testimonial4 from '../../images/testimonial/4.png'
import Scribble from '../Scribble.astro';

const testimonials = {
    title: 'Ekam Voices',
    subtitle: 'Stories of Transformation and Growth',
    data: [
      {
        image: testimonial1,
        quote: "This school has demonstrated that education extends beyond the mental and physical aspects. It offers spiritual education while keeping a strong connection to our Indian culture, which significantly boosts my child's morale",
        author: '- Ms Anjana Singh, Parent',
      },
      {
        image: testimonial3,
        quote: "Over the past 2 years, I have witnessed my child's tremendous academic and personal growth. The school's commitment to a well rounded education is evident in the variety of extracurricular activities offered.",
        ctaLink: '',
        author: '- MR. Rakesh Singh, PARENT'
      },
      {
        image: testimonial4,
        quote: "SSRVM is a wonderful place to learn and grow. SSRVM has given me a holistic education that I am thankful for. SSRVM is not just a school, it is a community",
        author: '- Samarth Jain, Student',

      },
    ],
}

const title = testimonials.title;
const data = testimonials.data
const subtitle = testimonials.subtitle;
---

<Section class="flex flex-col items-center">
  <Text type={'h2'}>Our Success <span class="scribble">Stories <Scribble class="-left-1 bottom-3" /> </span></Text>
  <div class="p-2" />
  <Text type={'base'} class='font-bold'>Shaping a Brighter Future for Your Child</Text>

   <div class='w-full h-[192px] rounded-2xl bg-white mt-7 border-gray-300 border overflow-hidden flex flex-row max-md:flex-col max-md:px-2 max-md:py-4 max-md:h-auto'>
      <div class='
        min-w-[34vw] max-md:w-[100%]
        max-md:min-h-[170px] bg-cover bg-center
        max-md:bg-top
        rounded-lg
        rounded-r-none
        '
        style={{
          backgroundImage: `url(${testimonials.data[0].image.src})`
        }}>
      </div>
      <div class='flex flex-col justify-center px-14 max-md:px-1 max-md:items-left'>
        <Text
          type={'regular'}
          class={'text-black max-md:mt-4 max-md:w-full'}
        >
          {testimonials.data[0].quote}
        </Text>

        <div class="pt-4 max-md:2" />
        <Text type="sm" class="tracking-[1.8px] text-yellow-500 uppercase font-bold">{testimonials.data[0].author}</Text>
      </div>
    </div>
    <!-- <TestimonicalCard 
            quote={testimonials.data[0].quote}
            author={testimonials.data[0]?.author}
            image={testimonials.data[0].image}
            className="bg-transparent  rounded-bl-[50px]"
        /> -->


  <div class="p-3" />

  <div class="flex flex-row gap-7 max-sm:flex-col max-sm:gap-0">
    {data.slice(1).map(item => {
      return (
        <TestimonicalCard 
            quote={item.quote}
            author={item?.author}
            image={item.image}
            ctaText={item.ctaText}
            ctaLink={item.ctaLink}
            className="bg-transparent  rounded-bl-[50px]"
        />
      )
    })}
  </div>


</Section>
